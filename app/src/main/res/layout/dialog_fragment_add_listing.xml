<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/item_empty_state" />

    <ImageButton
        android:id="@+id/dialog_fragment_add_listing_close_image_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/close_black"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialog_fragment_add_listing_header_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD CARS"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:background="@drawable/background_search_box">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:src="@drawable/ic_search"/>

            <EditText
                android:id="@+id/dialog_fragment_add_listing_search_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="17sp"
                android:background="@null"
                android:textColor="#444A59"
                android:textColorHint="#444A59"
                android:fontFamily="sans-serif-medium"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:hint="Car ID / Registration No" />

            <ImageButton
                android:id="@+id/dialog_fragment_add_listing_clear_image_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_black"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:padding="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/dialog_fragment_add_listing_car_filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/chevron_down"
                android:drawableTint="@color/colorAccent"
                android:drawablePadding="5dp"
                android:text="Any Model"
                android:textAllCaps="false"
                android:textColor="#FF5C6AC4"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/dialog_fragment_add_listing_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/dialog_fragment_add_listing_progress_bar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:theme="@style/AppTheme"/>
</RelativeLayout>