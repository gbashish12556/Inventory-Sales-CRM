<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.truebil.crm.Activities.DeliveryActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/activity_delivery_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/activity_delivery_back_arrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_left"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/activity_delivery_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DELIVERY DETAILS"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/activity_delivery_error_text_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="Email Address is required"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:gravity="center"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            android:background="@drawable/background_orange_bottom_rounded"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_delivery_header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Delivery Date"
                    android:textSize="13sp"
                    android:textColor="#7D8AA1"/>

                <TextView
                    android:id="@+id/delivery_activity_delivery_date_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#7D8AA1"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/is_there_any_prompt"
                    android:textSize="13sp"
                    android:textColor="#7D8AA1"/>

                <TextView
                    android:id="@+id/delivery_activity_loan_required_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#7D8AA1"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Select Hypothecation"
                android:textSize="13sp"
                android:textColor="#7D8AA1"/>

            <Spinner
                android:id="@+id/delivery_activity_input_hypothecation_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#7D8AA1"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:prompt="@string/hypothecation_prompt" />

            <EditText
                android:id="@+id/delivery_activity_other_hypothecation_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#444A59"
                android:textSize="15sp"
                android:maxLines="1"
                android:hint="Enter Hypothecation"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Is 12 Month Service and RSA cross sold? "
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/delivery_activity_tweleve_month_rsa_cross_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/delivery_activity_delivery_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/delivery_activity_delivery_note_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="Delivery Note"
                    android:inputType="text"
                    android:textColor="#FF7D8AA1"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="4dp"
                android:text="Booklet ?"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"
                android:textColor="#7D8AA1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"
                    android:id="@+id/add_booklet_relative_layout">

                    <ImageView
                        android:id="@+id/booklet_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:minWidth="80dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="1dp"
                        android:background="#EDEDF5" />

                    <ImageView
                        android:id="@+id/broke_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24px"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/item_booklet_listing_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clipToPadding="false" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/navigate_to_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Cancel"
                    android:textColor="#7D8AA1"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/confirm_details_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="4dp"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Confirm Details"
                        android:textColor="#5C6AC4"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_right_arrow_purple" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/activity_delivery_progress_bar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"/>

</RelativeLayout>