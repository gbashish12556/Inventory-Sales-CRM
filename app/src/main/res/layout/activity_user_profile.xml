<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.truebil.crm.Activities.UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/activity_user_profile_back_image_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_left"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/activity_user_profile_header_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanyam Garg's Profile"
                android:textSize="15sp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/activity_user_profile_header_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:text="9666706065"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/activity_user_profile_feedback_image_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_outlined_flag_black_24"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_user_profile_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:tabTextAppearance="@style/TabLayoutBackground"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#5d6cbe"
        app:tabTextColor="#7D8AA1"
        app:tabSelectedTextColor="#5C6AC4"
        app:tabIndicatorHeight="3dp"
        app:tabGravity="center" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_user_profile_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"/>

</LinearLayout>
