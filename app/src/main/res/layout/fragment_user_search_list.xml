<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/fragment_user_search_list_search_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="4dp"
            android:paddingEnd="4dp"
            android:orientation="horizontal"
            android:elevation="4dp"
            android:background="@drawable/background_search_box">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search"/>

            <EditText
                android:id="@+id/fragment_user_search_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="17sp"
                android:background="@android:color/transparent"
                android:textColor="#444A59"
                android:textColorHint="#444A59"
                android:fontFamily="sans-serif-medium"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="@string/mobile_no" />

            <ImageButton
                android:id="@+id/fragment_user_search_clear_image_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_close_black"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:padding="14dp"/>

        </LinearLayout>



    </LinearLayout>

    <ListView
        android:id="@+id/fragment_user_search_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_user_search_list_search_linear_layout"
        android:visibility="visible" />

    <include
        android:id="@+id/ragment_user_search_no_buyer_found_layout"
        layout="@layout/item_no_buyer_found_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/fragment_user_search_list_search_linear_layout"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/fragment_user_search_list_progress_bar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>