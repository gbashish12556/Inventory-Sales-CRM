<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorry! No Buyer Found"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#444A59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444A59"
        android:text="Try changing mobile number"
        android:textSize="17sp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:id="@+id/layout_create_appointment_linear_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5C6AC4"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Create an appoinment"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_action_arrow_right"
            android:tint="#5C6AC4"/>

    </LinearLayout>

</LinearLayout>