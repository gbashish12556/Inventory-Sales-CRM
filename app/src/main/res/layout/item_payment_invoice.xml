<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payment_date"
            android:text="MAR 24, FRIDAY"
            android:textSize="17sp"
            android:textColor="#444A59"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="#7D8AA1"
            android:id="@+id/transaction_id"
            android:text="MSwipe 33242344353ALS"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_payment_for_car"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Payment for car"
                android:textSize="17sp"
                android:textColor="#444A59" />

            <TextView
                android:id="@+id/payment_for_car"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#444A59"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:textSize="15sp"
                android:text="₹5000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/title_payment_service"
                android:text="Payment for service"
                android:textSize="17sp"
                android:textColor="#444A59" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/payment_for_service"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                android:textColor="#444A59"
                android:gravity="end"
                android:textSize="15sp"
                android:text="₹5000" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="#D8DEEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="#444A59"
                android:text="Total Amount: "/>

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#444A59"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="₹8700"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/light_grey"/>

</LinearLayout>