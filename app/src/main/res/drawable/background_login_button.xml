<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default state -->
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false">
        <shape>
            <solid android:color="@color/colorAccent"></solid>
            <corners android:radius="@dimen/corner_radius"/>
            <stroke android:width="@dimen/stroke_width" android:color="@color/colorAccent"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="@dimen/corner_radius" />
        </shape>
    </item>

</layer-list>